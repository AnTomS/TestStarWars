<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/shape_for_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/field_name_people"
            style="@style/MyTextStyleForTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:gravity="center"
            android:text="Имя персонажа" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/field_gender"
            style="@style/MyTextStyleFor_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:text="пол" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/field_date_birthYear"
            style="@style/MyTextStyleFor_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:text="дата рождения" />

    </LinearLayout>
</androidx.cardview.widget.CardView>