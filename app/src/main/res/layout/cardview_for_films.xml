<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/shape_for_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/field_title_film"
            style="@style/MyTextStyleForTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:gravity="center"
            android:text="Название фильма" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/field_director_film"
            style="@style/MyTextStyleFor_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:text="Режиссёр" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/field_producer_film"
            style="@style/MyTextStyleFor_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:text="Продюссер" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/field_release_date_film"
            style="@style/MyTextStyleFor_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:text="1 октября 1991" />

    </LinearLayout>
</androidx.cardview.widget.CardView>